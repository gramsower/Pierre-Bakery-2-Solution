@{
  Layout="_Layout";
}

@model Bakery.Models.Flavor

<h2>Add an Item</h2>

<h4>Add an Item to this Flavor Tag: @Html.DisplayFor(model => model.FlavorName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select Item")
    @Html.DropDownList("ItemId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to Flavor List", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>