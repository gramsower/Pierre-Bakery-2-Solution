<!DOCTYPE html>
<html>
  <head>
    <meta name="viewpoint" content="width=device-width, initial-scale=1.0" charset="utf-8">
    <!-- ^^^^ this line of code helps when it comes to changes of screen type ^^^^ -->
    <title>Recipe Box</title>
    <link 
      rel="stylesheet" 
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css" 
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" 
      crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,200;1,100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">
  </head>
  <body>
    <div class="container">
      <div class="first_inner_div">
        @RenderBody()
      </div>
    </div>
    <div class="container">
      <div class="outer_navigation_bar">
        <div class="navigation_bar">
            <img src="/img/croissantsmall.jpg"
            alt="croissant dusted with flour on a black background">
          @if (User.Identity.IsAuthenticated) {
            <span class = "link">@Html.ActionLink("Home", "Index", "Home") 
              | |
            @Html.ActionLink("All Items", "Index", "Items") 
              | |
            @Html.ActionLink("All Flavors", "Index", "Flavors")
            <br></span>
            <span class="please_move">
              <p>@User.Identity.Name</p> 
              @using (Html.BeginForm("LogOff", "Account"))
              {
                <input type="submit" class="btn btn-primary" value="Log out" /> 
              }
            </span>
          }
          else 
          {
            <span class="link">@Html.ActionLink("Home", "Index", "Home")</span>
            <span class="link">@Html.ActionLink("Login", "Login", "Account")</span>
            <span class="link">@Html.ActionLink("Register", "Register", "Account")</span>
          } 
        </div>
      </div>
    </div>
  </body>
</html>